<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset Password</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css">
    <style>
        /* inclucde css file */
        body {
            font-family: Arial, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }
        .products-catagories-area {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background-color: #f7f7f7;
        }
        .amado-pro-catagory {
            width: 100%;
            max-width: 400px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }
        .wrap-login100 {
            padding: 20px;
        }
        .login100-form {
            display: flex;
            flex-direction: column;
        }
        .login100-form-title {
            font-size: 24px;
            font-weight: 600;
            color: #333;
            margin-bottom: 20px;
            text-align: center;
        }
        .wrap-input100 {
            position: relative;
            margin-bottom: 16px;
        }
        .input100 {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }
        .input100:focus {
            border-color: #007bff;
            outline: none;
        }
        #togglePassword {
            position: absolute;
            top: 50%;
            right: 10px;
            transform: translateY(-50%);
            cursor: pointer;
        }
        .error {
            color: red;
            font-size: 14px;
        }
        .container-login100-form-btn {
            text-align: center;
            margin-top: 20px;
        }
        .login100-form-btn {
            width: 100%;
            padding: 10px;
            background-color: #007bff;
            color: #fff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }
        .login100-form-btn:hover {
            background-color: #0056b3;
        }
        .flex-col-c {
            display: flex;
            flex-direction: column;
            align-items: center;
        }
        .txt3 {
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
            margin-top: 20px;
        }
        .txt3:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="products-catagories-area">
        <div class="amado-pro-catagory">
            <div class="wrap-login100">
                <form
                    action="/resetpassword"
                    method="post"
                    class="login100-form validate-form p-l-55 p-r-55 p-t-178"
                >
                    <span class="login100-form-title">Forgot password</span>

                    <% if (typeof message !== "undefined" ) { %>
                    <div id="message" class="text-center error m-b-16">
                        <%= message %>
                    </div>
                    <% } %>

                    <div
                        class="wrap-input100 validate-input m-b-16"
                        data-validate="Please enter a strong password"
                    >
                        <input
                            id="password"
                            class="input100"
                            type="password"
                            name="newPassword"
                            placeholder="New password"
                        />
                        <i class="bi bi-eye-slash" id="togglePassword"></i>

                        <span class="focus-input100"></span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">Change password</button>
                    </div>

                    <div class="flex-col-c p-t-30 p-b-20">
                        <a href="/login" class="txt3">Back to login</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', (event) => {
            const togglePassword = document.querySelector('#togglePassword');
            const password = document.querySelector('#password');

            togglePassword.addEventListener('click', function (e) {
                // Toggle the type attribute
                const type = password.getAttribute('type') === 'password' ? 'text' : 'password';
                password.setAttribute('type', type);
                // Toggle the eye slash icon
                this.classList.toggle('bi-eye');
                this.classList.toggle('bi-eye-slash');
            });
        });
    </script>
</body>
</html>