            // Apply Coupon Code
            function applyCoupon() {
                const couponCode = document.getElementById('couponCode').value;
                if (!couponCode) {
                    document.getElementById('couponError').innerText = "Please enter a coupon code.";
                    return;
                }

                const cartTotalElement = document.getElementById('total');
                const checkoutTotalElement = document.getElementById('checkoutTotal');
                const couponDiscountElement = document.getElementById('couponDiscount');
                const cartTotal = extractNumericValue(cartTotalElement.innerText);

                $.ajax({
                    url: '/apply-coupon',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ couponCode: couponCode, cartTotal: cartTotal }),
                    success: function (response) {
                        if (response.success) {
                            const discountAmount = response.discountAmount;
                            const newTotal = response.newTotal;

                            cartTotalElement.innerText = `$${newTotal.toFixed(2)}`;
                            checkoutTotalElement.innerText = `$${newTotal.toFixed(2)}`;
                            couponDiscountElement.innerText = `$${discountAmount.toFixed(2)}`;

                            Swal.fire({
                                icon: "success",
                                title: "Coupon Applied",
                                text: `You have received a discount of $${discountAmount.toFixed(2)}.`,
                            });
                        } else {
                            document.getElementById('couponError').innerText = response.message;
                        }
                    },
                    error: function () {
                        document.getElementById('couponError').innerText = "Failed to apply coupon.";
                    }
                });
            }



