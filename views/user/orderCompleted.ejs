<%- include('../layout/user/header.ejs') %>

<div class="container order-confirmation-box my-5 py-5">
  <i class="fas fa-check-circle confirmation-icon text-success"></i>
  <div class="confirmation-message mt-4">
      <p class="h3 text-success">Thank you for your order!</p>
      <p class="lead">Your order has been successfully placed.</p>
  </div>
  
  <!-- Dynamic Order ID -->
  <p class="order-id mt-4">Your Order id: <strong>#<%= orderNumber %></strong></p>  
  
  <!-- Order Details -->
  <div class="order-summary mt-4">
    <h5>Order Summary</h5>
    <ul class="list-group mb-3">
      <% products.forEach((product) => { %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <span><%= product.quantity %>x <%= product.productId.name %></span>
          
        </li>
      <% }) %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <strong>Total Price</strong>
        <strong>â‚¹<%= totalPrice.toFixed(2) %></strong>
    </li>
    
    </ul>
  </div>
  
  <!-- Display order date -->
  <p class="order-date mt-2">Order Date: <strong><%= new Date(createdOn).toLocaleDateString() %></strong></p>

  <!-- Button to continue shopping -->
  <a href="/shop" class="btn btn-primary continue-shopping mt-4">Continue Shopping</a>
</div>

<%- include('../layout/user/footer.ejs') %>
