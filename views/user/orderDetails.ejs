<%- include('../layout/user/header.ejs') %>

<section style="margin: 60px;" class="content-main">
  <!-- Header Section -->

  <!-- Order Detail Section -->
  <div class="card">
    <!-- Order Header -->
    <header class="card-header">
      <!-- Order Info -->
      <div class="row align-items-center">
        <div class="col-lg-6 col-md-6 mb-lg-0 mb-15">
          <span>
            <!-- Display the order creation date if available -->
            <% if (order && order.createdOn) { %>
              <%= new Date(order.createdOn).toDateString() %>
            <% } else { %>
              Date not available
            <% } %>
          </span> <br>
          <small class="text-muted">Order ID: <%= order._id %></small>
        </div>
        <div class="col-lg-6 col-md-6 ms-auto text-md-end">
          <!-- <a class="btn btn-primary" href="#">Invoice</a> -->
          <!-- <a class="btn btn-primary" href="#">Save</a> -->
        </div>
      </div>
    </header>

    <!-- Order Body -->
    <div class="card-body">
      <!-- Customer Info -->
      <div class="row mb-50 mt-20 order-info-wrap">
        <!-- Customer Section -->
        <div class="col-md-4">
          <!-- Customer Card -->
          <article class="icontext align-items-start">
            <!-- Customer Icon -->
            <span class="icon icon-sm rounded-circle bg-primary-light">
              <i class="text-primary material-icons md-person"></i>
            </span>

            <!-- Customer Text -->
            <div class="text">
              <h6 class="mb-1">Customer</h6>
              <p class="mb-1">
                <%= user.name %> <br>
                <a href="mailto:<%= user.email %>"><%= user.email %></a> <br>
                +91 <%= user.phonenumber %>
              </p>
              
            </div>
          </article>
        </div>

        <!-- Order Information Section -->
        <div class="col-md-4">
          <!-- Order Information Card -->
          <article class="icontext align-items-start">
            <!-- Order Information Icon -->
            <span class="icon icon-sm rounded-circle bg-primary-light">
              <i class="text-primary material-icons md-local_shipping"></i>
            </span>

            <!-- Order Information Text -->
            <div class="text">
              <h6 class="mb-1">Order info</h6>
              <p class="mb-1">
                Shipping: Fargo Express <br>
                Pay method: <%= order.payment %> <br>
              </p>
              <!-- <a href="#">Download info</a> -->
            </div>
          </article>
        </div>

        <!-- Delivery Information Section -->
        <div class="col-md-4">
          <!-- Delivery Information Card -->
          <article class="icontext align-items-start">
            <!-- Delivery Information Icon -->
            <span class="icon icon-sm rounded-circle bg-primary-light">
              <i class="text-primary material-icons md-place"></i>
            </span>

            <!-- Delivery Information Text -->
            <div class="text">
              <h6 class="mb-1">Deliver to</h6>
              <p class="mb-1">
                <%= order.address.streetAddress %> <br>
                <%= order.address.city %><br>
                <%= order.address.zipcode %>
              </p>
              
            </div>
          </article>
        </div>
      </div> <!-- row // -->

      <!-- Order Products Table -->
      <div class="row">
        <div class="col-lg-12">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th width="40%">Product</th>
                  <th width="20%">Unit Price</th>
                  <th width="20%">Quantity</th>
                  <th width="20%" class="text-end">Total</th>
                </tr>
              </thead>
              <tbody>
                <!-- Loop through order products -->
                <% if (order && order.products && order.products.length > 0) { %>
                  <% order.products.forEach(product => { %>
                    <tr>
                      <td class="align-middle">
                        <a class="itemside" href="#">
                          <div class="left">
                            <img src="/static/uploads/<%= product.productId.images[0].filename %>" width="40"
                              height="40" class="img-xs" alt="Item">
                          </div>
                          <div class="info">
                            <%= product.productId.productName %>
                          </div>
                        </a>
                      </td>
                      <td class="align-middle">
                        ₹<%= product.productId.salesPrice %>
                      </td>
                      <td class="align-middle">
                        <%= product.quantity %>
                      </td>
                      <td class="text-end align-middle">
                        <strong>₹<%= product.productId.salesPrice * product.quantity %></strong>
                      </td>
                    </tr>
                  <% }) %>
                <% } else { %>
                  <tr>
                    <td colspan="4" class="text-center">No products in this order</td>
                  </tr>
                <% } %>
              </tbody>
              <tfoot>
                <tr>
                    <td colspan="5">
                        <% if (order.status === "Pending" || order.status === "Processing" || order.status === "Shipped") { %>
                          <p id="cancelMessage" class="text-danger" style="display: none;">Your order is canceled</p>
                          <!-- <button class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmationModal" onclick="setOrderIdToCancel('<%= order._id %>')">Cancel Order</button> -->
                            <button id="cancelOrderBtn" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#confirmationModal">Cancel Order</button>

                        <% } else if (order.status === "Canceled") { %>
                            Order Cancelled
                        <% } else if (order.status === "Completed") { %>
                           
                        <% } %>
                    </td>
                </tr>
              </tfoot>
            </table>
          </div> <!-- table-responsive// -->
        </div> <!-- col// -->
      </div> <!-- row // -->
    </div> <!-- card-body end// -->
  </div> <!-- card end// -->

</section>

<!-- Confirmation Modal -->
<div class="modal fade" id="confirmationModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Confirm Cancel Order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to cancel this order?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="confirmBtn" type="button" class="btn btn-danger">Confirm Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- Return Confirmation Modal -->
<div class="modal fade" id="returnConfirmationModal" tabindex="-1" aria-labelledby="returnModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="returnModalLabel">Confirm Return Order</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        Are you sure you want to return this order?
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button id="confirmReturnBtn" type="button" class="btn btn-primary">Confirm Return</button>
      </div>
    </div>
  </div>
</div>
<script>
  let orderIdToCancel = '<%= order._id %>';  // Store order ID directly

  document.getElementById('confirmBtn').addEventListener('click', async () => {
    try {
      const response = await fetch(`/cancel-order/${orderIdToCancel}`, { method: 'POST' });
      const data = await response.json();

      if (data.success) {
        // Hide the cancel order button
        document.getElementById('cancelOrderBtn').style.display = 'none';

        // Show the "Order Canceled" message
        document.getElementById('cancelMessage').style.display = 'block';

        // Optionally, you can also update the order status on the page without reloading
        const statusElement = document.getElementById('orderStatus');
        if (statusElement) {
          statusElement.textContent = 'Canceled';
        }

        // Close the confirmation modal
        const confirmationModal = new bootstrap.Modal(document.getElementById('confirmationModal'));
        confirmationModal.hide();
      } else {
        alert(data.message);
      }
    } catch (error) {
      console.error(error);
      alert('Something went wrong. Please try again later.');
    }
  });
</script>


<%- include('../layout/user/footer.ejs') %>
